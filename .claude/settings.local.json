{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(go mod tidy:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(podman compose:*)",
      "Bash(curl:*)",
      "Bash(./test_integration.sh:*)",
      "Bash(~/go/bin/swag init:*)",
      "Bash(npm test:*)",
      "Bash(npm run build:*)",
      "Bash(mv:*)",
      "mcp__codescene__code_health_score",
      "mcp__codescene__code_health_review",
      "Bash(git tag:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r 'select(.filePath | test(\"\\\\.(go|ts|tsx|js|jsx)$\")) | \"REMINDER: Run CodeScene health check and review on \" + .filePath' 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
